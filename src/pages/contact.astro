---
import BaseLayout from '../layouts/base-layout.astro'
import '../styles/global.css'
import Instagram from '../../public/icons/instagram.astro'
import Mail from '../../public/icons/mail.astro'
import Artstation from '../../public/icons/artstation.astro'
import Phone from '../../public/icons/phone.astro'
import Nav from '../components/nav.astro'
---

<BaseLayout
  description='Étudiant passionné par la 3D, je suis basé à Besançon où je crée des univers uniques grâce à mes compétences en modélisation et animation.'
>
  <Nav />
  <div class='wrapper'>
    <div class='photo'></div>
    <div class='content'>
      <div class='text'>
        <div class='left'>
          <div class='introduction'>
            <h1>Hello!</h1>
            <p>
              My name is Thomas Paquier. My strengths are Visual Development,
              environment and lighting. I love creating and storytelling. I look
              forward to contributing my creativity and skills to innovative
              projects.
            </p>

            <!-- Changer texte du haut avant merge -->
            <p>Hope you enjoy my portfolio!</p>
          </div>
          <div class='education'>
            <h2>education</h2>
            <div class='about-card'>
              <h3>2020 - 2024: BUT Métiers du Multimédia et de l'Internet</h3>
              <p>Graduated with a major in Multimedia Design</p>
            </div>
          </div>
        </div>
        <div class='right'>
          <div class='skills'>
            <h2>skills</h2>
            <div class='skills-row'>
              <div class='logo'>
                <img src='/icons/blender.svg' alt='' />
              </div>
              <div class='logo'>
                <img src='/icons/substance-painter.svg' alt='' />
              </div>
              <div class='logo'>
                <img src='/icons/adobe-photoshop.svg' alt='' />
              </div>
            </div>
            <div class='skills-row'>
              <div class='logo'>
                <img src='/icons/unreal-engine.svg' alt='' />
              </div>
              <div class='logo'>
                <img src='/icons/davinci.svg' alt='' />
              </div>
              <div class='logo'><img src='/icons/3ds-max.svg' alt='' /></div>
            </div>
          </div>
          <div class='experience'>
            <h2>experience</h2>
            <div class='about-card'>
              <h3>February 2024 - June 2024</h3>
              <p>Freelance at the academy de Besançon</p>
            </div>
            <div class='about-card'>
              <h3>Mars 2023 - June 2023</h3>
              <p>Front-end developper at VISIPERF</p>
            </div>
          </div>
        </div>
      </div>
      <div class='bottom'>
        <div class='contact'>
          <Phone class='rectangle' />
          <h3><a href='tel:+33783798945'>07 83 79 89 45</a></h3>
        </div>
        <div class='contact'>
          <Mail class='rectangle' />
          <h3>
            <a href='mailto:thomas.paquier.pro@gmail.com'
              >thomas.paquier.pro@gmail.com</a
            >
          </h3>
        </div>
        <div class='contact'>
          <Artstation class='rectangle' />
          <h3>
            <a href='https://www.artstation.com/thomas_paquier' target='_blank'
              >thomas_paquier</a
            >
          </h3>
        </div>
        <div class='contact'>
          <Instagram class='rectangle' />
          <h3>
            <a href='https://www.instagram.com/thomas_paquier' target='_blank'
              >@thomas_paquier</a
            >
          </h3>
        </div>
      </div>
    </div>
  </div>

  <style scoped>
    html,
    body {
      height: 100%; /* Ensure html and body take up the full height */
      margin: 0; /* Remove default margin */
      padding: 0; /* Remove any default padding */
      overflow: hidden; /* Prevents scrolling if content overflows */
    }

    body {
      /* background-image: url('/public/about.png'); */
      background-size: cover; /* Ensures the image covers the entire page */
      background-repeat: no-repeat; /* Prevents the image from repeating */
      background-position: center; /* Centers the image */
      font-family: 'Gilroy', sans-serif;
      background-color: var(--v2-primary);
      display: flex;
      justify-content: center;
      align-items: center;
      color: var(--v2-secondary);
    }
    a {
      color: var(--v2-secondary);
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }

    h1,
    h2,
    h3 {
      font-family: 'Gilroy', sans-serif;
      font-weight: 900;
      color: var(--v2-tertiary); /* tertiary in night mode*/
      line-height: 1;
    }
    h2 {
      font-size: 68px;
      margin-bottom: 55px;
      margin-top: 10px;
      letter-spacing: -1px;
      text-transform: uppercase;
    }
    h3 {
      font-size: 30px;
      margin-bottom: 20px;
    }

    p {
      font-family: 'Gilroy', sans-serif;
      font-weight: 400;
      font-size: 22px;
      letter-spacing: 1.2px;
      line-height: 1.5;
      color: var(--v2-secondary);
    }

    .wrapper {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 5.5%;
      height: 80%;
      padding-left: 155px;
      padding-right: 115px;
      padding-top: 50px;
    }

    .photo {
      background-image: url('/photo_tp.webp');
      background-size: cover; /* Ensures the image covers the entire page */
      background-repeat: no-repeat; /* Prevents the image from repeating */
      background-position: center; /* Centers the image */
      width: 700px;
      height: 95%;
      border-radius: 80px;
      margin-top: 15px;
    }

    .content {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
    }

    .text {
      display: flex;
      flex-direction: row;
      justify-content: space-between;

      padding-top: 13px;
    }
    .introduction {
      display: flex;
      flex-direction: column;
      width: 98%;
      margin-bottom: 80px;

      h1 {
        color: var(--v2-tertiary);
        font-size: 166px;
        line-height: 1;
        margin-bottom: 72px;
      }
      p:first-of-type {
        /* color: var(--v2-secondary); */
        margin-bottom: 45px;
      }
    }

    .education {
      display: flex;
      flex-direction: column;
      width: 100%;

      p {
        letter-spacing: 1px;
      }
    }
    .skills {
      display: flex;
      flex-direction: column;
      width: 100%;
      gap: 10px;

      h2 {
        margin-top: 8px;
      }
    }
    .skills-row {
      display: flex;
      flex-direction: row;
      gap: 30px;
      margin-bottom: 20px;
    }
    .skills-row > .logo {
      background-color: var(--v2-tertiary);
      width: 110px;
      height: 110px;
      border-radius: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .logo img {
      width: 70px;
    }
    .skills-row:nth-of-type(1) .logo:nth-of-type(2) img {
      width: 100px;
      padding-top: 5px;
    }
    .skills-row:nth-of-type(1) .logo:nth-of-type(3) img {
      width: 60px;
    }

    .skills-row:last-of-type {
      margin-bottom: 100px;
    }

    .experience {
      h3 {
        margin-bottom: 15px;
      }
      p {
        margin-bottom: 50px;
      }
    }
    .left {
      flex-grow: 1;
      max-width: 850px;
      margin-right: 40px;
    }
    .right {
      flex-grow: 1;
    }

    .bottom {
      display: flex;
      flex-direction: row;
      gap: 70px;
      margin-top: 30px;
      z-index: 1000;

      .contact {
        display: flex;
        flex-direction: row;
        align-items: center;
      }

      .rectangle {
        width: 30px;
        height: 30px;
        border-radius: 5px;
        margin-right: 10px;

        fill: var(--v2-tertiary);
      }

      h3 {
        font-weight: 400;
        font-size: 22px;
        margin: 0;
      }
    }

    .about-card {
      h3 {
        color: var(--v2-quaternary);
      }
    }
  </style>
</BaseLayout>
